<!DOCTYPE html>
<html>
  <head>
    <title>GSTN-ASP</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="<%= asset_url('favicon.png') %>" />
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body class="snf-body">
    <header>
      <%= render 'shared/admin_header' %>
    </header>
    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <% if flash[:notice].present? %>
            <div class="alert alert-success">
              <%= flash[:notice] %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="container-fluid ">
      <div class="row">
        <div class="col-sm-12 dashboard-content">
          <%= yield %>
          <a class="go-to-top-link"><i class="fa fa-angle-up" aria-hidden="true"></i></a>
        </div>
        </div>
      </div>
    </div>
  </body>
  <%= render 'shared/footer' %>
</html>
<script>
  $(window).scroll(function() {
    if ($(this).scrollTop() >= 20) {
        $('.go-to-top-link').fadeIn(200);
    } else {
        $('.go-to-top-link').fadeOut(200);
    }
  });

  $('.go-to-top-link').click(function(){
    $("html, body").animate({ scrollTop: 0 }, 600);
    return false;
  });

  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-90810853-7', 'auto');
  ga('send', 'pageview');

</script>
